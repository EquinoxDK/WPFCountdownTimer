<UserControl x:Class="Countdown.TimerSheet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Countdown"
             mc:Ignorable="d" d:DesignWidth="300" Height="auto">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="Text" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="Time" Grid.Column="0" Grid.Row="1"/>
        <Button x:Name="CloseButton" Grid.Column="1" Grid.Row="0" Content="X" HorizontalAlignment="Right"  VerticalAlignment="Top" FontWeight="Bold" Background="{x:Null}" BorderThickness="0" Click="Close_Clicked"/>
    </Grid>
</UserControl>
